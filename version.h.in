#pragma once

#define quoteTmp(x)  #x
#define versionQuote(x) quoteTmp(x)

#define PROJECT_NAME "@PROJECT_NAME@"
#define PROJECT_VERSION_MAJOR @PROJECT_VERSION_MAJOR@
#define PROJECT_VERSION_MINOR @PROJECT_VERSION_MINOR@
#define PROJECT_VERSION_PATCH @PROJECT_VERSION_PATCH@

#define PROJECT_BUILD_NUMBER @PROJECT_BUILD_NUMBER@
#define PROJECT_GIT_BRANCH "@PROJECT_GIT_BRANCH@"
#define PROJECT_GIT_COMMIT_HASH "@PROJECT_GIT_COMMIT_HASH@"
#define PROJECT_BUILD_DATE "@PROJECT_BUILD_DATE@"
#define PROJECT_BUILD_TIME "@PROJECT_BUILD_TIME@"

#define PROJECT_VERSION_MAJMIN versionQuote(PROJECT_VERSION_MAJOR) "." versionQuote(PROJECT_VERSION_MINOR)
#define PROJECT_VERSION_STRING_SHORT PROJECT_NAME " " PROJECT_VERSION_MAJMIN "." versionQuote(PROJECT_VERSION_PATCH) "." versionQuote(PROJECT_BUILD_NUMBER)
#define PROJECT_VERSION_STRING_FULL \
		PROJECT_VERSION_STRING_SHORT \
		" (" PROJECT_GIT_BRANCH ", " PROJECT_GIT_COMMIT_HASH ", " PROJECT_BUILD_DATE " " PROJECT_BUILD_TIME ")\0"
